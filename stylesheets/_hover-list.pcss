& {
  ul.hover-list:hover { a, li, span, i, h1, h2, h3, h4, h5, h6, small {
      color: $color-gray;
      svg { fill: $color-gray; }
      &:hover { a, li, span, i, h1, h2, h3, h4, h5, h6, small {
        color: black;
        svg { fill: black; }
      } }
  } }
}
& > .dark {
  ul.hover-list:hover { a, li {
      &:hover { a, li, span, i, h1, h2, h3, h4, h5, h6, small { color: white; } }
  } }
  background: $color-coal;
  *, a:hover { color: white; }
  &, a { color: white; }
  i { color: white; }
  svg { g, path {
    fill: white;
  } }
}
