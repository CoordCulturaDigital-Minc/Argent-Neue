.img-clipper {
	overflow: hidden;
	padding: 0;
	img {
		display: block;
		margin: 0 auto;
		width: auto;
		height: auto;
		max-height: 100%;
		max-width: 100%;
		&.wide {
			width: auto;
			height: 100%;
			min-width: none;
			max-width: none;
		}
		&.tall {
			height: auto;
			width: 100%;
			min-height: none;
			max-height: none;
		}
	}
}
