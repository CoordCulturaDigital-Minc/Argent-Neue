& > header {
  padding-top: calc($gutter*2);
  padding-bottom: $gutter;

  & > div {
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    margin: 0 auto;

    .lead {
      margin-top: calc($gutter*2);
      font-size: 30px;
    }
    #branding {
      max-width: 600px;
      width: 100%;
    }
    #branding_simple {
      max-width: 425px;
      width: 100%;
    }
  }
}
